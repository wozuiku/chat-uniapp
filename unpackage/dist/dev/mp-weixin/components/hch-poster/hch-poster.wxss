.content {
  height: 100%;
  text-align: center;
}
.canvas-content {
  position: absolute;
  top: 0;
}
.canvas-content .canvas-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.canvas-content .canvas {
  z-index: 10;
}
.canvas-content .button-wrapper {
  position: fixed;
  bottom: 20rpx;
  z-index: 16;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 72rpx;
}
.canvas-content .button-wrapper .save-btn-box {
  padding-left: 120rpx;
}
.canvas-content .button-wrapper .save-btn-box .save-btn {
  z-index: 16;
  width: 240rpx;
  height: 100%;
  font-size: 30rpx;
  line-height: 72rpx;
  color: #fff;
  text-align: center;
  background-color: #30BEB8;
}
.canvas-content .button-wrapper .cancel-btn-box {
  padding-right: 120rpx;
}
.canvas-content .button-wrapper .cancel-btn-box .cancel-btn {
  z-index: 16;
  width: 240rpx;
  height: 100%;
  font-size: 30rpx;
  line-height: 72rpx;
  color: #fff;
  text-align: center;
  background-color: #30BEB8;
}
.canvas-content .canvas-close-btn {
  position: fixed;
  top: 30rpx;
  right: 0;
  z-index: 12;
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx;
}

